<% if @comment.errors.any? %>
  <%= turbo_stream.replace "commit_#{@metadata.id}_new_comment" do %>
    <%= render partial: "commit_comments/form", 
               locals: { metadata: @metadata, comment: @comment } %>
  <% end %>
<% else %>
  <%= turbo_stream.replace "commit_#{@metadata.id}_new_comment" do %>
    <%= link_to "Add Comment", 
        new_commit_metadatum_commit_comment_path(@metadata),
        class: "usa-button",
        data: { turbo_stream: true } %>
  <% end %>

  <%= turbo_stream.append "commit_#{@metadata.id}_comments" do %>
    <%= render partial: "commit_comments/comment", 
               locals: { comment: @comment } %>
  <% end %>
<% end %>
