<%= turbo_stream.replace "commit_#{@metadata.id}_new_comment" do %>
  <%= render partial: "commit_comments/form", 
             locals: { metadata: @metadata, comment: @comment } %>
<% end %>

<% if @metadata.comments.none? %>
  <%= turbo_stream.append "commit_#{@metadata.id}_comments_container" do %>
    <table class="usa-table width-full margin-top-2" id="commit_#{@metadata.id}_comments_table">
      <colgroup>
        <col style="width: 60%">
        <col style="width: 20%">
        <col style="width: 20%">
      </colgroup>
      <thead>
        <tr>
          <th scope="col">Comment</th>
          <th scope="col">Author</th>
          <th scope="col">Posted</th>
        </tr>
      </thead>
      <tbody>
      </tbody>
    </table>
  <% end %>
<% end %>
